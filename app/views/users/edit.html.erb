
<%= link_to 'My Home', user_path(@user) %>

<h1>Edit My Account:</h1>

<%= form_for(@user) do |f| %>

 <%= f.file_field :avatar %>

   <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div> 
 <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div> 
  <div class="field">
  	<%= f.label :email %><br>
  	<%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %> 